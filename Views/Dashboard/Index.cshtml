@model StockManager.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard de Stock";
}

<div class="container-fluid">
    <h1>StockBoard</h1>
    <!-- Tarjetas de Resumen -->
    <div class="row mb-1">
        <!-- Productos -->
        <div class="col-md-2 mb-1">
            <a asp-area="" asp-controller="Products" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-primary h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Summary.TotalProducts</h5>
                        <p class="card-text">Productos</p>
                    </div>
                </div>
            </a>
        </div>
        <!-- Movimientos -->
        <div class="col-md-2 mb-1">
            <a asp-area="" asp-controller="StockMovements" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-verde-claro h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Summary.TotalMovements</h5>
                        <p class="card-text">Movimientos</p>
                    </div>
                </div>
            </a>
        </div>        
        <!-- Productos a reponer -->
        <div class="col-md-2 mb-1">
            <a asp-controller="Products" asp-action="Index" asp-route-showLowOnly="true" class="text-decoration-none">
                <div class="card text-white bg-pastel-warning h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Summary.LowStockCount</h5>
                        <p class="card-text">Productos a reponer</p>
                    </div>
                </div>
            </a>
        </div>
        <!-- Pedidos a entregar -->
        <div class="col-md-2 mb-1">
            <a asp-controller="Products" asp-action="Index" asp-route-showNegativeOnly="true" class="text-decoration-none">
                <div class="card text-white bg-pastel-danger h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Summary.CriticalStockCount</h5>
                        <p class="card-text text-nowrap">Pedidos a entregar</p>
                    </div>
                </div>
            </a>
        </div>
        <!-- Valor total de las ventas -->
        <div class="col-md-2 mb-1">
            <div class="card text-white bg-pastel-orange h-100">
                <div class="card-body text-center">
                    <p class="text-title">@Model.Summary.TotalSales.ToString("C")</p>
                    <p class="card-text">Total de ventas</p>
                </div>
            </div>
        </div>
        <!-- Valor total del inventario -->
        <div class="col-md-2 mb-1">
            <div class="card text-white bg-pastel-orange h-100">
                <div class="card-body text-center">
                    <p class="text-title">@Model.Summary.StockPriceTotal.ToString("C")</p>
                    <p class="card-text">Valor total del inventario</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Gráficos -->
    <div class="row">
        <!-- Productos Más Vendidos -->
        <div class="col-md-6">
            <div class="card">
            <div class="card-header">
                    <h5>Productos Más Vendidos</h5>
                </div>
                <div class="card-body">
                    <canvas id="salesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        <!-- Stock Bajo -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Productos con Stock Bajo y Productos a Entregar</h5>
                </div>
                <div class="card-body">
                    <canvas id="stockChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        <!-- precio vs ventas -->
        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Relación Precios vs Ventas</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="priceQuantityChart" width="700" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        //Grafico de ventas
        var salesCtx = document.getElementById('salesChart').getContext('2d');
        var salesChart = new Chart(salesCtx, {
            type: 'bar',
            data: {
                labels: [
                    @Html.Raw(string.Join(", ", Model.TopSellingProducts.Select(p => $"'{p.ProductName}\\n({p.CategoryPath})'")))
                ],
                datasets: [{
                    label: 'Unidades Vendidas',
                    data: [@string.Join(", ", Model.TopSellingProducts.Select(p => p.TotalSold))],
                    backgroundColor: [
                            '#097834', 
                            '#0da34e',
                            '#10b856',
                            '#0b8a42', 
                            '#075e28',
                            '#13d465',
                            '#086326',
                            '#064a1e'
                    ],
                        borderColor: '#ffffff',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        ticks: {
                            font: {
                                size: 8}
                        }
                    },                
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        //Grafico de stock bajo
        var stockCtx = document.getElementById('stockChart').getContext('2d');
        var stockChart = new Chart(stockCtx, {
            type: 'bar',
            data: {
                labels: [
                    @Html.Raw(string.Join(", ", Model.LowStockProducts.Select(p => $"'{p.ProductName}\\n({p.CategoryPath})'")))
                ],
                datasets: [{
                    label: 'Stock Actual',
                    data: [@string.Join(", ", Model.LowStockProducts.Select(p => p.CurrentStock))],
                    backgroundColor: 'rgba(255, 99, 132, 0.8)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        ticks: {
                            font: {
                                size: 8
                            }
                        }
                    },
                    y: {
                        beginAtZero: true,
                        suggestedMax: Math.max(...[@string.Join(", ", Model.LowStockProducts.Select(p => p.CurrentStock))]) + 2,
                        ticks: {
                            stepSize: 1,
                            precision: 0
                        }
                    }
                }
            }
        });
        //Grafico precio vs ventas
        var priceQuantityCtx = document.getElementById('priceQuantityChart').getContext('2d');
        var priceQuantityChart = new Chart(priceQuantityCtx, {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Productos Económicos (< $2000)',
                    data: [
                        @Html.Raw(string.Join(", ", Model.PriceVsQuantity.Where(p => p.Price < 2000).Select(p =>
                            $"{{x: {p.Price}, y: {p.QuantitySold}}}"
                                        )))
                ],
                backgroundColor: 'rgba(75, 192, 192, 0.8)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1,
                pointRadius: 6
            }, {
                label: 'Productos Medios ($2000 - $4000)',
                data: [
                    @Html.Raw(string.Join(", ", Model.PriceVsQuantity.Where(p => p.Price >= 2000 && p.Price < 4000).Select(p =>
                                                $"{{x: {p.Price}, y: {p.QuantitySold}}}"
                                        )))
                ],
                backgroundColor: 'rgba(255, 159, 64, 0.8)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1,
                pointRadius: 6
            }, {
                label: 'Productos Caros (≥ $4000)',
                data: [
                    @Html.Raw(string.Join(", ", Model.PriceVsQuantity.Where(p => p.Price >= 4000).Select(p =>
                                                $"{{x: {p.Price}, y: {p.QuantitySold}}}"
                                        )))
                ],
                backgroundColor: 'rgba(255, 99, 132, 0.8)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1,
                pointRadius: 6
            }]
        },
        options: {
            responsive: true,
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Precio ($)'
                    },
                    ticks: {
                        callback: function(value) {
                            return '$' + value;
                        }
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Cantidades Vendidas'
                    },
                    beginAtZero: true
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return `Precio: $${context.parsed.x} | Ventas: ${context.parsed.y} u.`;
                        }
                    }
                }
            }
        }
    });
    </script>
}