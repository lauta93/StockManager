@model StockManager.Models.ProductViewModel

@{
    ViewData["Title"] = "Detalles del producto";
}

<h1>Detalles del producto</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-3">Stock actual</dt>
        <dd class="col-sm-9">@Model.Stock</dd>

        <dt class="col-sm-3">Stock mínimo</dt>
        <dd class="col-sm-9">@Model.MinimumStock</dd>

        <dt class="col-sm-3">Categorías</dt>
        <dd class="col-sm-9">@Model.CategoryPath</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
