@using StockManager.ViewModels
@using StockManager.Services
@model PaginationViewModel<ProductViewModel>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar nuevo producto</a>
</p>

<!-- FORMULARIO DE BÚSQUEDA-->
<div class="row mb-3">
    <div class="col-md-12">
        <form method="get" class="row g-2 align-items-end">
            <!-- Buscador de Productos -->
            <div class="col-md-3">
                <label class="form-label">Buscar Producto:</label>
                <input type="text"
                       id="productSearch"
                       name="searchTerm"
                       value="@ViewBag.SearchTerm"
                       class="form-control"
                       placeholder="Nombre del producto"
                       autocomplete="off" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Buscar por Categoría:</label>
                <input type="text"
                       name="categorySearch"
                       value="@ViewBag.CategorySearch"
                       class="form-control"
                       placeholder="Nombre de la categoría"
                       autocomplete="off" />
            </div>
            <!-- Botones -->
            <div class="col-md-4">
                <label class="form-label" style="visibility: hidden;">Botones</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">Buscar</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary flex-fill">Limpiar</a>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="col-md-12 text-start">
    <div class="text-muted">
        Mostrando @((Model.PageNumber - 1) * Model.PageSize + 1) -
        @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems)
        de @Model.TotalItems productos
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Stock Actual</th>
            <th>Stock Mínimo</th>
            <th>Estado</th>
            <th>Categoría</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="@CategoryService.GetStockRowClass(item.CurrentStock, item.MinimumStock)">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <span class="@CategoryService.GetStockBadgeClass(item.CurrentStock, item.MinimumStock)">
                        @item.CurrentStock
                    </span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.MinimumStock)</td>
                <td>
                    <small class="text-muted">
                        @CategoryService.GetStockStatusText(item.CurrentStock, item.MinimumStock)
                    </small>
                </td>
                <td class="small" style="word-wrap: break-word; max-width: 180px;">@item.CategoryPath</td>
                <td>
                    <a asp-controller="StockMovements" asp-action="Create" asp-route-productId="@item.Id"
                       class="btn btn-sm btn-outline-primary">+ / -</a>
                </td>
                <td class="small">
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- SELECTOR DE CANTIDAD DE ITEMS CON BOTONES -->
<div class="row mt-3">
    <div class="col-md-12">
        <form method="get" class="d-inline">
            <span class="me-2">Items por página:</span>
            @foreach (var option in Model.PageSizeOptions)
            {
                <button type="submit"
                        name="pageSize"
                        value="@option"
                        class="btn @(Model.PageSize == option ? "btn-primary" : "btn-outline-primary") btn-sm me-1">
                    @option
                </button>
            }
            <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm" />
            <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
            <input type="hidden" name="page" value="1" />
        </form>
    </div>
</div>
<!-- Paginación Simple -->
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            <!-- Botón Anterior -->
            @if (Model.HasPrevious)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1, pageSize = Model.PageSize, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })">
                        &laquo; Anterior
                    </a>
                </li>
            }
            <!-- Números de Página -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })">
                        @i
                    </a>
                </li>
            }
            <!-- Botón Siguiente -->
            @if (Model.HasNext)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1, pageSize = Model.PageSize, searchTerm = ViewBag.SearchTerm, categoryId = ViewBag.CategoryId })">
                        Siguiente &raquo;
                    </a>
                </li>
            }
        </ul>
    </nav>
}
@section Scripts {
    <script>
        $(document).ready(function() {
            // Solo permitir búsqueda con Enter
            $('#productSearch').keypress(function(event) {
                if (event.which == 13) { // Enter key
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
}
