@using StockManager.ViewModels
@using StockManager.Services
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Stock Actual</th>
            <th>Stock Mínimo</th>
            <th>Estado</th>
            <th>Categoría</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@CategoryService.GetStockRowClass(item.CurrentStock, item.MinimumStock)">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <span class="@CategoryService.GetStockBadgeClass(item.CurrentStock, item.MinimumStock)">
                        @item.CurrentStock
                    </span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.MinimumStock)</td>
                <td>
                    <small class="text-muted">
                        @CategoryService.GetStockStatusText(item.CurrentStock, item.MinimumStock)
                    </small>
                </td>
                <td class="small" style="word-wrap: break-word; max-width: 180px;">@item.CategoryPath</td>
                <td>
                    <a asp-controller="StockMovements" asp-action="Create" asp-route-productId="@item.Id" 
                       class="btn btn-sm btn-outline-primary">+ / -</a>
                </td>
                <td class="small">
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
