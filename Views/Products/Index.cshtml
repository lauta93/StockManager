@using StockManager.ViewModels
@using StockManager.Services
@model PaginationViewModel<ProductViewModel>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Agregar nuevo producto</a>
</p>
<!-- FORMULARIO DE BÚSQUEDA-->
<div class="row mb-3">
    <div class="col-md-12">
        <form method="get" class="row g-2 align-items-end">
            <!-- Buscador de Productos -->
            <div class="col-md-3">
                <label class="form-label">Buscar Producto:</label>
                <input type="text"
                       id="productSearch"
                       name="searchTerm"
                       value="@ViewBag.SearchTerm"
                       class="form-control"
                       placeholder="Nombre del producto"
                       autocomplete="off" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Buscar por Categoría:</label>
                <input type="text"
                       name="categorySearch"
                       value="@ViewBag.CategorySearch"
                       class="form-control"
                       placeholder="Nombre de la categoría"
                       autocomplete="off" />
            </div>
            <!-- Botones -->
            <div class="col-md-4">
                <label class="form-label" style="visibility: hidden;">Botones</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">Buscar</button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary flex-fill">Limpiar</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="col-md-12 text-start">
    <div class="text-muted">
        Mostrando @((Model.PageNumber - 1) * Model.PageSize + 1) -
        @Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems)
        de @Model.TotalItems productos
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a href="@Url.Action("Index", new { 
                    sortOrder = ViewBag.NameSort,
                    searchTerm = ViewBag.SearchTerm,
                    categoryId = ViewBag.CategoryId,
                    categorySearch = ViewBag.CategorySearch,
                    page = 1,
                    pageSize = Model.PageSize
                })" class="text-decoration-none text-dark">
                    Producto
                    @if (ViewBag.CurrentSort == "name_asc")
                    {
                        <i class="bi bi-sort-alpha-down"></i>
                    }
                    else if (ViewBag.CurrentSort == "name_desc")
                    {
                        <i class="bi bi-sort-alpha-up"></i>
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { 
                    sortOrder = ViewBag.PriceSort,
                    searchTerm = ViewBag.SearchTerm,
                    categoryId = ViewBag.CategoryId,
                    categorySearch = ViewBag.CategorySearch,
                    page = 1,
                    pageSize = Model.PageSize
                })" class="text-decoration-none text-dark">
                    Precio
                    @if (ViewBag.CurrentSort == "price_asc")
                    {
                        <i class="bi bi-sort-numeric-down"></i>
                    }
                    else if (ViewBag.CurrentSort == "price_desc")
                    {
                        <i class="bi bi-sort-numeric-up"></i>
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { 
                    sortOrder = ViewBag.StockSort,
                    searchTerm = ViewBag.SearchTerm,
                    categoryId = ViewBag.CategoryId,
                    categorySearch = ViewBag.CategorySearch,
                    page = 1,
                    pageSize = Model.PageSize
                })" class="text-decoration-none text-dark">
                    Stock Actual
                    @if (ViewBag.CurrentSort == "stock_asc")
                    {
                        <i class="bi bi-sort-numeric-down"></i>
                    }
                    else if (ViewBag.CurrentSort == "stock_desc")
                    {
                        <i class="bi bi-sort-numeric-up"></i>
                    }
                </a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { 
                    sortOrder = ViewBag.MinStockSort,
                    searchTerm = ViewBag.SearchTerm,
                    categoryId = ViewBag.CategoryId,
                    categorySearch = ViewBag.CategorySearch,
                    page = 1,
                    pageSize = Model.PageSize
                })" class="text-decoration-none text-dark">
                    Stock Mínimo
                    @if (ViewBag.CurrentSort == "minstock_asc")
                    {
                        <i class="bi bi-sort-numeric-down"></i>
                    }
                    else if (ViewBag.CurrentSort == "minstock_desc")
                    {
                        <i class="bi bi-sort-numeric-up"></i>
                    }
                </a>
            </th>
            <th>Estado</th>
            <th>
                <a href="@Url.Action("Index", new { 
                    sortOrder = ViewBag.CategorySort,
                    searchTerm = ViewBag.SearchTerm,
                    categoryId = ViewBag.CategoryId,
                    categorySearch = ViewBag.CategorySearch,
                    page = 1,
                    pageSize = Model.PageSize
                })" class="text-decoration-none text-dark">
                    Categoría
                    @if (ViewBag.CurrentSort == "category_asc")
                    {
                        <i class="bi bi-sort-alpha-down"></i>
                    }
                    else if (ViewBag.CurrentSort == "category_desc")
                    {
                        <i class="bi bi-sort-alpha-up"></i>
                    }
                </a>
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="@CategoryService.GetStockRowClass(item.CurrentStock, item.MinimumStock)">
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <span class="@CategoryService.GetStockBadgeClass(item.CurrentStock, item.MinimumStock)">
                        @item.CurrentStock
                    </span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.MinimumStock)</td>
                <td>
                    <small class="text-muted">
                        @CategoryService.GetStockStatusText(item.CurrentStock, item.MinimumStock)
                    </small>
                </td>
                <td class="small" style="word-wrap: break-word; max-width: 180px;">@item.CategoryPath</td>
                <td>
                    <a asp-controller="StockMovements" asp-action="Create" asp-route-productId="@item.Id"
                       class="btn btn-sm btn-outline-primary">+ / -</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- SELECTOR DE CANTIDAD DE ITEMS CON BOTONES -->
<div class="row mt-3">
    <div class="col-md-12">
        <form method="get" class="d-inline">
            <span class="me-2">Items por página:</span>
            @foreach (var option in Model.PageSizeOptions)
            {
                <button type="submit"
                        name="pageSize"
                        value="@option"
                        class="btn @(Model.PageSize == option ? "btn-primary" : "btn-outline-primary") btn-sm me-1">
                    @option
                </button>
            }
            <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm" />
            <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
            <input type="hidden" name="categorySearch" value="@ViewBag.CategorySearch" />
            <input type="hidden" name="sortOrder" value="@ViewBag.CurrentSort" />
            <input type="hidden" name="page" value="1" />
        </form>
    </div>
</div>

<!-- Paginación Simple -->
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            <!-- Botón Anterior -->
            @if (Model.HasPrevious)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { 
                        page = Model.PageNumber - 1, 
                        pageSize = Model.PageSize, 
                        searchTerm = ViewBag.SearchTerm, 
                        categoryId = ViewBag.CategoryId,
                        categorySearch = ViewBag.CategorySearch,
                        sortOrder = ViewBag.CurrentSort
                    })">
                        &laquo; Anterior
                    </a>
                </li>
            }
            <!--Cantidad de paginas-->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { 
                        page = i, 
                        pageSize = Model.PageSize, 
                        searchTerm = ViewBag.SearchTerm, 
                        categoryId = ViewBag.CategoryId,
                        categorySearch = ViewBag.CategorySearch,
                        sortOrder = ViewBag.CurrentSort 
                    })">
                        @i
                    </a>
                </li>
            }
            <!-- Botón Siguiente -->
            @if (Model.HasNext)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { 
                        page = Model.PageNumber + 1, 
                        pageSize = Model.PageSize, 
                        searchTerm = ViewBag.SearchTerm, 
                        categoryId = ViewBag.CategoryId,
                        categorySearch = ViewBag.CategorySearch,
                        sortOrder = ViewBag.CurrentSort 
                    })">
                        Siguiente &raquo;
                    </a>
                </li>
            }
        </ul>
    </nav>
}
@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">    
    <script>
        $(document).ready(function() {
            // Solo permitir búsqueda con Enter
            $('#productSearch').keypress(function(event) {
                if (event.which == 13) { // Enter key
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
}